{
	"compile":{
		"ext":".styl",
		"cmd":"stylus -c",
		"cmdr":"-o",
		"route":"../public/css"
	},
	"layouts":{
		"active":false
	},
	"views":{
		"path":"./views",
		"pathCompile":"./views",
		"compile":{
			"admin.styl":{
				"helpers":{
					"reset":"[@pp]reset.styl",
					"plugins":["[@ult]uTipsy.styl","[@ult]uLoader.styl","[@ult]jqFancybox.styl","[@ult]jqFullCalendar.styl"]
				},
				"includes":{
					"layout":["[@pp]header.styl","[@pp]general.styl","[@pp]footer.styl"],
					"vhelpers":["content.styl","buttons.styl","forms.styl","resources.styl"],
					"imports":["login.styl"]
				}
			}
		}
	},
	"vars":{
		"global":{
			"routImg":"[@url]../img/",
			"styfluxFonts":"[@url]fonts/",
			"routImgFancybox":"[@url]../img/fancybox/",
			"routImgTipsy":"[@url]../img/",
			"routImgLoader":"[@url]../img/"
		},
		"admin.styl":{
			"family1":"Arial,sans-serif",
			"family2":"'Cuprum',Arial,sans-serif",
			"gradientInit":"#C57979",
			"gradientFinish":"#A34C4C",
			"borderBtn":"#A95151",
			"icLogin":"-14px 0",
			"icLogout":"-36px 0",
			"alistOption":"-394px 0",
			"icDashboard":"-47px 0",
			"icProduct":"-61px 0",
			"icPromotion":"-75px 0",
			"icTable":"-89px 0",
			"icCalendar":"-36px -14px",
			"icEdit":"-103px 0",
			"icDelete":"-119px 0",
			"icPerfil":"-151px 0",
			"icYoutube":"-162px 0",
			"aicClose":"-176px 0",
			"icFile":"-198px 0"
		}
	},
	"ignore":{
		"layouts":["render"],
		"views":["admin/vhelpers","admin/layout","admin/imports"]
	}
}